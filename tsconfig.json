{
  "compilerOptions": {
    "rootDir": "source",
    "outDir": "./distribution",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node"]
  },
  "include": ["source/**/*"]
}
