{
  "compilerOptions": {
    // File Layout
    "rootDir": "./source",
    "outDir": "./distribution",

    // Environment Settings
    "module": "ES6",
    "target": "ES6",
    "lib": ["ES2020", "DOM"],
    
    // Recommended Options
    "strict": true,
    
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "source/**/*"
  ]
}